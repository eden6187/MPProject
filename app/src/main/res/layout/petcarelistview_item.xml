<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/petcare_image_petcarelistview_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="3" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/petcare_title_petcarelistview_item"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/petcare_star_petcarelistview_item"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/petcare_rating_num_petcarelistview_item"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/petcare_reviewcount_petcarelistview_item"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/petcare_distance_petcarelistview_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>