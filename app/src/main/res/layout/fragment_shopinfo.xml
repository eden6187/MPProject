<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ShopinfoFragment">

    <ImageView
        android:id="@+id/imageView_shop_image"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close_cross" />

    <TextView
        android:id="@+id/textView_shop_intro_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="업체 소개"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_shop_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_shop_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="업체 정보"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_shop_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_shop_reservation"
            android:layout_width="428dp"
            android:layout_height="277dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#8AE88E"
            android:text="예약하러가기"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>