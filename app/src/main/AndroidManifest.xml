<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matkigae.mpproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.matkigae.mpproject.ui.SettingActivity"></activity>
        <activity
            android:name="com.matkigae.mpproject.ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/NoActionBar" />
        <activity android:name="com.matkigae.mpproject.ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.matkigae.mpproject.ui.ReservationActivity"></activity>
        <activity android:name="com.matkigae.mpproject.ui.PaymentActivity"></activity>
        <activity android:name="com.matkigae.mpproject.ui.TestActivity"></activity>
    </application>
    <uses-permission android:name="com.android.vending.BILLING" />
</manifest>